/* Landing Page Styles */
.landing-page {
  --bg: #0b1020;
  --text: #eaf0f6;
  --muted: #a9b2c0;
  --brand: #6ee7ff;
  --accent: #ffd166;
  --card: rgba(255, 255, 255, .06);
}

.landing-page {
  background: var(--bg);
  color: var(--text);
  font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, "Helvetica Neue", Arial, "Noto Sans", sans-serif;
  line-height: 1.6;
}

.landing-page a {
  color: inherit;
  text-decoration: none;
}

.landing-page .container {
  width: min(1100px, 92%);
  margin: 0 auto;
}

/* Header */
.landing-header {
  position: fixed;
  inset: 0 auto auto 0;
  right: 0;
  height: 64px;
  z-index: 50;
  backdrop-filter: blur(8px);
  background: linear-gradient(180deg, rgba(11, 16, 32, .7), rgba(11, 16, 32, .3));
  border-bottom: 1px solid rgba(255, 255, 255, .06);
}

.landing-header .inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 64px;
}

.landing-header .brand {
  display: flex;
  align-items: center;
  gap: 12px;
  font-weight: 700;
}

.landing-header .brand .logo {
  width: 28px;
  height: 28px;
  background: radial-gradient(circle at 30% 30%, var(--brand), #2dd4bf 60%, #0ea5e9);
  border-radius: 8px;
  box-shadow: 0 4px 20px rgba(109, 213, 250, .4);
}

.landing-header nav a {
  opacity: .9;
  margin-left: 18px;
}

.landing-header nav a:hover {
  opacity: 1;
}

.landing-page .btn {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 10px 16px;
  background: linear-gradient(180deg, #1e293b, #111827);
  border: 1px solid rgba(255, 255, 255, .12);
  border-radius: 12px;
  transition: transform .2s ease;
}

.landing-page .btn:hover {
  transform: translateY(-1px);
}

/* Hero */
.landing-page .hero {
  position: relative;
  min-height: 100svh;
  display: grid;
  align-items: center;
  text-align: center;
  overflow: hidden;
}

.landing-page .hero .bg {
  position: absolute;
  inset: -10% -10% -10% -10%;
  background-size: cover;
  background-position: center;
  will-change: transform;
  transform: translate3d(0, 0, 0);
  filter: saturate(1.05) brightness(.9);
}

.landing-page .scrim {
  position: absolute;
  inset: 0;
  background: radial-gradient(1200px 700px at 50% 0%, rgba(15, 23, 42, .3), transparent 60%),
    linear-gradient(180deg, rgba(3, 6, 16, .8), rgba(3, 6, 16, .2) 40%, rgba(3, 6, 16, .9));
}

.landing-page .hero .content {
  position: relative;
  z-index: 2;
  padding-top: 80px;
  padding-bottom: 40px;
}

.landing-page .eyebrow {
  letter-spacing: .2em;
  text-transform: uppercase;
  font-size: .85rem;
  color: var(--muted);
}

.landing-page h1 {
  font-family: "Playfair Display", serif;
  font-weight: 700;
  font-size: clamp(2.4rem, 6vw, 4.2rem);
  margin: 16px 0 12px;
  line-height: 1.1;
}

.landing-page .lead {
  font-size: clamp(1.05rem, 2.2vw, 1.25rem);
  color: #cfd8e3;
  margin: 0 auto 24px;
  max-width: 800px;
}

/* Features */
.landing-page .section {
  padding: 88px 0;
}

.landing-page .cards {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 18px;
}

.landing-page .card {
  background: var(--card);
  border: 1px solid rgba(255, 255, 255, .08);
  border-radius: 18px;
  padding: 18px 18px 20px;
  backdrop-filter: blur(6px);
}

.landing-page .card h3 {
  font: 600 1.1rem/1.3 Inter, system-ui;
}

.landing-page .card p {
  font-size: .95rem;
  color: #c8d0dc;
}

/* Parallax quote sections */
.landing-page .parallax {
  position: relative;
  min-height: 85svh;
  display: grid;
  place-items: center;
  overflow: hidden;
  border-block: 1px solid rgba(255, 255, 255, .06);
}

.landing-page .parallax .parallax__bg {
  position: absolute;
  inset: -10% -10%;
  background-size: cover;
  background-position: center;
  will-change: transform;
  transform: translate3d(0, 0, 0) scale(1.15);
  filter: contrast(1.05) saturate(1.15);
}

.landing-page .parallax .overlay {
  position: absolute;
  inset: 0;
  background: radial-gradient(900px 600px at 50% 60%, rgba(0, 0, 0, .25), rgba(0, 0, 0, .6) 60%);
  mix-blend-mode: multiply;
}

.landing-page blockquote {
  position: relative;
  z-index: 2;
  max-width: 900px;
  padding: 32px;
  border-radius: 16px;
  background: rgba(0, 0, 0, .25);
  border: 1px solid rgba(255, 255, 255, .12);
}

.landing-page blockquote p {
  font-family: "Playfair Display", serif;
  font-size: clamp(1.4rem, 3vw, 2rem);
  line-height: 1.4;
  margin: 0;
}

.landing-page blockquote footer {
  color: #cfd8e3;
  margin-top: 10px;
  font-size: .95rem;
}

/* CTA */
.landing-page .cta {
  text-align: center;
  padding: 96px 0;
}

.landing-page .cta .box {
  background: linear-gradient(180deg, rgba(125, 211, 252, .08), rgba(59, 130, 246, .08));
  border: 1px solid rgba(255, 255, 255, .1);
  border-radius: 24px;
  padding: 36px 20px;
}

.landing-page .cta h2 {
  font-family: "Playfair Display", serif;
  font-size: clamp(1.8rem, 4.6vw, 2.8rem);
  margin: 0 0 12px;
}

.landing-page footer {
  padding: 28px 0 48px;
  border-top: 1px solid rgba(255, 255, 255, .08);
  color: var(--muted);
}

/* Small screens */
@media (max-width: 640px) {
  .landing-header {
    height: 56px;
  }

  .landing-header .inner {
    height: 56px;
  }

  .landing-page .btn {
    padding: 9px 14px;
  }

  .landing-page .parallax {
    min-height: 70svh;
  }
}

/* Reduced motion */
@media (prefers-reduced-motion: reduce) {
  .landing-page .parallax .parallax__bg,
  .landing-page .hero .bg {
    transform: none !important;
  }
}
